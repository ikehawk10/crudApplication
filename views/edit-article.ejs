<% include _header %>
	<div class='container'>
		<div class='panel panel-danger'>
		<div class='panel-heading'>
			<form action='/articles/<%= article.id %>' method='POST'>
			  <div class='form-group'>
			    <label for='articleTitle'>Title</label>
			    <input name='title' type='text' class='form-control' value='<%= article.title %>'>
			  </div>
			  <div class='form-group'>
			    <label for='articleAuthor'>Author</label>
			    <input name='author' type='text' class='form-control' value='<%= article.author %>'>
			  </div>
			  <div class='form-group'>
			    <label for='articleBody'>Content</label>
			    <textarea name='body' class='form-control'><%= article.body %></textarea>
			  </div>
			  <input type='submit' name='submit' id='btn-submit' class='btn btn-default'>
			</form>
			</div>
		</div>
	</div>
<% include _footer %>